
<!-- Navigation section  -->

<div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">

        <div class="navbar-header">
            <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span>
            </button>
            <a href="{{ path('home') }}" class="navbar-brand"><img src="{{ vich_uploader_asset(custom, 'logoFile') }}" alt=""></a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="active"><a href="{{ path('home') }}">Accueil</a></li>
                {% if custom.presentationArticle %}
                    <li><a href="{{ path('article.show', {'slug' : custom.presentationArticle.slug , 'id' : custom.presentationArticle.id }) }}" > Présentation du site</a></li>
                {% endif %}
                <li><a class="go-down" href="#">Contact</a></li>
                {% if custom.insta %}
                <li><a href="{{ custom.insta }}"><img src="/images/insta.png" alt="Compte instagram"></a></li>
                {% endif %}
                {% if custom.facebook %}
                <li><a href="{{ custom.facebook }}"><img src="/images/facebook.png" alt="Page facebook"></a></li>
                {% endif %}
                <li>
                    {% if app.user %}
                            <a href="{{ path('account_logout') }}">Déconnexion</a>

                    {% endif %}
                </li>

            </ul>
        </div>

    </div>
</div>
{% for label, messages in app.flashes %}
    <div class="container">
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                <p>{{ message | raw }}</p>
            {% endfor %}
        </div>
    </div>
{% endfor %}